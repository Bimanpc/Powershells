# Event Î³Î¹Î± "Load"
$loadButton.Add_Click({
    $openFile = New-Object System.Windows.Forms.OpenFileDialog
    $openFile.Filter = "Audio Files (*.mp3;*.wav)|*.mp3;*.wav"
    if ($openFile.ShowDialog() -eq "OK") {
        $trackList.Items.Add($openFile.FileName)
    }
})

